##########################################################################
#    You can modify this example makefile to fit for your own program.   #
#    Usually, you only need to change the five CHANGEME entries below.   #
##########################################################################

# CHANGEME: This should be the name of your executable
EXE = maxcut@EXEEXT@

# CHANGEME: Directory to the sources for the (example) problem definition
# files
SRCDIR = @srcdir@
VPATH  = $(SRCDIR)/TM $(SRCDIR)/LP $(SRCDIR)/CG $(SRCDIR)/Member

# CHANGEME: Additional libraries
ADDLIBS =

# CHANGEME: Additional flags for compilation (e.g., include flags)
ADDINCFLAGS =

# CHANGEME: Here is the name of all object files corresponding to the source
#           code that you wrote in order to define the problem statement
OBJS = \
	MC_cutgen.@OBJEXT@ \
	MC_ising_cycles.@OBJEXT@ \
	MC_shortest_path_cycle.@OBJEXT@ \
	MC_lp_branch.@OBJEXT@ \
	MC_lp_param.@OBJEXT@ \
	MC_lp.@OBJEXT@ \
	MC_tm.@OBJEXT@ \
	MC_tm_param.@OBJEXT@ \
	MC_kruskal.@OBJEXT@ \
	MC.@OBJEXT@ \
	MC_mst_heur.@OBJEXT@ \
	MC_INST.@OBJEXT@ \
	MC_cut.@OBJEXT@ \
	MC_init.@OBJEXT@ \
	MC_solution.@OBJEXT@

# CHANGEME: Additional include directories for compilation. Note that no
# include directory needs to be listed here for headers from COIN.
USER_INCDIRS = $(SRCDIR)/include @MPIINCDIR@

##########################################################################
#  Usually, you don't have to change anything below.  Note that if you   #
#  change certain compiler options, you might have to recompile the      #
#  COIN package.                                                         #
##########################################################################

# C++ Compiler command
CXX = @CXX@

# C++ Compiler options
CXXFLAGS = @CXXFLAGS@

# additional C++ Compiler options for linking
CXXLINKFLAGS = @RPATH_FLAGS@

# Directory with COIN header files
COININCDIR = @abs_include_dir@/coin

# Directory with COIN libraries
COINLIBDIR = @abs_lib_dir@

# Directory with COIN libraries
COINDOCDIR = @prefix@/share/doc/coin

# Libraries necessary to link with Clp
LIBS = \
	-L$(COINLIBDIR) \
	-lBcp \
	-lOsiClp \
	-lOsiVol \
	-lOsi \
	-lClp \
	-lVol \
	-lCoinUtils \
	`cat $(COINDOCDIR)/Bcp/bcp_addlibs.txt` \
	`cat $(COINDOCDIR)/Cgl/cgl_addlibs.txt` \
	`cat $(COINDOCDIR)/Osi/osi_addlibs.txt` \
	`cat $(COINDOCDIR)/Clp/clp_addlibs.txt` \
	`cat $(COINDOCDIR)/Vol/vol_addlibs.txt` \
	`cat $(COINDOCDIR)/CoinUtils/coinutils_addlibs.txt`

# The following is necessary under cygwin, if native compilers are used
CYGPATH_W = @CYGPATH_W@

# Necessary Include dirs (we use the CYGPATH_W variables to allow
# compilation with Windows compilers)
INCL = `for i in $(USER_INCDIRS) $(COININCDIR); do $(CYGPATH_W) $$i | sed -e 's/^/-I/'; done`

all: $(EXE)

.SUFFIXES: .cpp .c .o .obj

$(EXE): $(OBJS)
	bla=;\
	for file in $(OBJS); do bla="$$bla `$(CYGPATH_W) $$file`"; done; \
	$(CXX) $(CXXLINKFLAGS) $(CXXFLAGS) -o $@ $$bla $(ADDLIBS) $(LIBS)

clean:
	rm -rf $(EXE) $(OBJS)

distclean: clean

.cpp.o:
	$(CXX) $(CXXFLAGS) $(INCL) -c -o $@ `test -f '$<' || echo '$(SRCDIR)/'`$<


.cpp.obj:
	$(CXX) $(CXXFLAGS) $(INCL) -c -o $@ `if test -f '$<'; then $(CYGPATH_W) '$<'; else $(CYGPATH_W) '$(SRCDIR)/$<'; fi`
